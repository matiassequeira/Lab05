<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dam.isi.frsf.utn.edu.ar.lab05.GestionarProyectoActivity"
    android:weightSum="1">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:id="@+id/listViewProyectos"
        android:layout_weight="0.81" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo"
            android:id="@+id/buttonNuevoProyecto" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:id="@+id/buttonEliminarProyecto" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar"
            android:id="@+id/buttonModificarProyecto" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Tareas"
            android:id="@+id/buttonVerTareas" />
    </LinearLayout>

</LinearLayout>